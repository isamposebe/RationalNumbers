<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rationals Calculator" Height="450" Width="1024"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0">
            <TextBlock>1/3+2/3+4/3</TextBlock>
        </Viewbox>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox>
                <TextBox AcceptsReturn="True" Text="test" BorderThickness="0"/>
            </Viewbox>
            
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Margin="4" Grid.Row="0" Grid.Column="0">
                    <Viewbox>
                        <TextBlock>+</TextBlock>
                    </Viewbox>
                </Button>
                <Button Margin="4" Grid.Row="0" Grid.Column="1">
                    <Viewbox>
                        <TextBlock>-</TextBlock>
                    </Viewbox>
                </Button>
                <Button Margin="4" Grid.Row="1" Grid.Column="0">
                    <Viewbox>
                        <TextBlock>*</TextBlock>
                    </Viewbox>
                </Button>
                <Button Margin="4" Grid.Row="1" Grid.Column="1">
                    <Viewbox>
                        <TextBlock>/</TextBlock>
                    </Viewbox>
                </Button>
            </Grid>

            <Button Margin="4" FontSize="32" Grid.Row="2">
                <Viewbox>
                    <TextBlock>=</TextBlock>
                </Viewbox>
            </Button>
        </Grid>
    </Grid>
</Window>